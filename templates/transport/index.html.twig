{% extends 'base.html.twig' %}

{% block title %}Transport index{% endblock %}

{% block body %}
<br>
<br>
<br>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card-box table-responsive">
    <h1>Transport index</h1>
                        {% for message in app.flashes('info') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>

                        {% endfor %}
    <table class="table">
        <thead>
            <tr>

                <th>Duree_transport</th>
                <th>Type_transport</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>

                <td>{{ transport.dureeTransport }}</td>
                <td>{{ transport.typeTransport }}</td>
                <td>{{ transport.capacite }}</td>

                <td>
                    <a href="{{ path('transport_show', {'id': transport.id}) }}">show</a>
                    <a href="{{ path('transport_edit', {'id': transport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('transport_new') }}">Create new</a>
                    </div>
                    <div class="pagination">
                        {{ knp_pagination_render(transports) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
