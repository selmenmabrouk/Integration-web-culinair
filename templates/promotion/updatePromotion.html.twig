{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="{{ asset ('back-office/plugins/css/plugins.css') }}">

    <!-- Custom style -->
    <link href="{{ asset ('back-office/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset ('back-office/css/responsiveness.css') }}" rel="stylesheet"><link id="jssDefault" rel="stylesheet" href="{{ asset ('back-office/css/skins/default.css') }}">
{% endblock %}
{% block body %}
    {{ form_start(form) }}

    <h1> Modifier la Promotion </h1>
    <div class="row">
        <div class="col-xs-8">
            {{ form_errors(form.tauxPromotion) }}
            {{ form_label(form.tauxPromotion,"tauxPromotion :") }}
            {{ form_widget(form.tauxPromotion , { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-8">
            {{ form_errors(form.description) }}
            {{ form_label(form.description,"description :") }}
            {{ form_widget(form.description , { 'attr': {'class': 'form-control br-1'} })  }}
        </div>


    </div>
    {{ form_end(form) }}

{% endblock %}

