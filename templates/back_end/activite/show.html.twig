{% extends 'back_end/base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-12">
                    <div class="card-box table-responsive">
    <h1>Activite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Type_activite</th>
                <td>{{ activite.typeActivite }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{{ activite.temps }}</td>
            </tr>
            <tr>
                <th>Prix_activite</th>
                <td>{{ activite.prixActivite }}</td>
            </tr>
            <tr>
                <th>Nombre_participant</th>
                <td>{{ activite.nombreParticipant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activite_index') }}">back to list</a>

    <a href="{{ path('activite_edit', {'id': activite.id}) }}">edit</a>

    {{ include('back_end/activite/_delete_form.html.twig') }}
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
{% endblock %}
