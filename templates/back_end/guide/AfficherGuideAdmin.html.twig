{% extends 'back_end/base.html.twig' %}
{% block body %}

	<section>
		<header class="panel-heading">
			Liste des guides
		</header>

		<div class="btn-group">
			<a class="btn btn-primary" href="{{ path('guide_new') }}">Ajouter Guide
				<i class="icon_plus_alt2"></i>
			</a>
		</div>

		<table class="table table-striped table-advance table-hover">
			<tbody>
			<tr>
				<th>
					<i class="icon_tag"></i>
					Nom
				</th>
				<th>
					<i class="icon_pencil"></i>
					Prenom
				</th>
				<th>
					<i class="icon_comment" ></i>
					Description
				</th>
				<th>
					<i class="icon_profile"></i>
					Photo
				</th>
				<th>
					<i class="icon_cogs"></i>
					Action
				</th>
			</tr>
			{% for g in guide %}
				<tr>
					<td>{{ g.Nom }}</td>
					<td>{{ g.Prenom }}</td>
					<td>{{ g.Description }}</td>
					<td>
						<img src="{{ asset('uploads/guide/'~g.Photo) }}"></td>
					<td>
						<div class="btn-group">

							<a class="btn btn-success" href="{{ path('guide_edit',{'id':g.id}) }}">
								<i class="fa fa-pencil"></i>
							</a>
							<a class="btn btn-danger" href="{{ path('guide_delete',{'id':g.id}) }}">
								<i class="fa fa-trash"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</section>
	<!-- container section end -->
	<!-- javascripts -->
	<script src="js/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<!-- nicescroll -->
	<script src="js/jquery.scrollTo.min.js"></script>
	<script src="js/jquery.nicescroll.js" type="text/javascript"></script>
	<!--custome script for all page-->
	<script src="js/scripts.js"></script>
{% endblock %}
