{% extends 'back_end/base.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Liste des plats
        </header>
        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('ajoutPlat') }}">Ajouter Plat <i
                        class="icon_plus_alt2"></i>
            </a>
        </div>
        <table class="table table-striped table-advance table-hover">
            <tbody>
            <tr>
                <th><i class="icon_tag"></i> Nom</th>
                <th><i class="icon_pencil"></i> Type de cuisine</th>
                <th><i class="icon_comment"></i> Description</th>
                <th><i class="icon_tag"></i> Prix</th>
                <th><i class="icon_pencil"></i> Liste restaurants</th>
                <th><i class="icon_profile"></i> Photo</th>
                <th><i class="icon_cogs"></i> Action</th>
            </tr>
            {% for p in plat %}
                <td>{{ p.nom }}</td>
                <td>{{ p.TypeCuisine }}</td>
                <td>{{ p.Description }}</td>
                <td>{{ p.Prix }}</td>
                <td>
                    {% for r in p.Restau %}
                        {{ r.nom }} <br>

                    {% endfor %}
                </td>
                <td><img src="{{ asset('uploads/plat/'~p.photo) }}" alt=""/></td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-success" href="{{ path('modifyPlat',{'id':p.id}) }}"><i
                                    class="fa fa-pencil"></i></a>
                        <a class="btn btn-danger" href="{{ path('deletePlat',{'id':p.id}) }}"><i
                                    class="fa fa-trash"></i></a>
                    </div>
                </td>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
