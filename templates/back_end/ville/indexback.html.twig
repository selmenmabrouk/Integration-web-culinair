{% extends 'back_end/base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1>Ville index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>NomVille</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.ville }}</td>
                <td>
                    <a href="{{ path('ville_showback', {'id': ville.id}) }}">show</a>
                    <a href="{{ path('ville_editback', {'id': ville.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ville_newback') }}">Create new</a>
{% endblock %}
