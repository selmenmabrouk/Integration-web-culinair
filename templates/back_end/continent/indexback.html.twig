{% extends 'baseback.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}
    <h1>Continent index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>NomContinent</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.id }}</td>
                <td>{{ continent.nomContinent }}</td>
                <td>
                    <a href="{{ path('continent_showback', {'id': continent.id}) }}">show</a>
                    <a href="{{ path('continent_editback', {'id': continent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('continent_new_back') }}">Create new</a>
{% endblock %}
