{% extends 'back_end/base.html.twig' %}
{% block body %}

    <section class="panel">
        <header class="panel-heading">
            Liste Des Restaurants
        </header>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('ajoutRestaurant') }}">Ajouter Restaurant <i
                        class="icon_plus_alt2"></i></a>
        </div>
        <header class="panel-heading">

        </header>

        <table class="table table-striped table-advance table-hover">
            <tbody>
            <tr>

                <th><i class="icon_tag"></i> Nom</th>
                <th><i class="icon_pencil"></i> Type de cuisine</th>
                <th><i class="icon_pin_alt"></i> Emplacement</th>
                <th><i class="icon_comment"></i> Description</th>
                <th><i class="icon_profile"></i> Photo</th>
                <th><i class="icon_cogs"></i> Action</th>
            </tr>

            {% for r in Restaurant %}

                <tr>
                    <td>{{ r.nom }}</td>
                    <td>{{ r.type }}</td>
                    <td>{{ r.emplacement }}</td>
                    <td>{{ r.description }}</td>
                    <td><img src="{{ asset('uploads/restaurant/'~r.photo) }}"/></td>

                    <td>
                        <div class="btn-group">

                            <a class="btn btn-success" href="{{ path('modifierRestaurant',{'id':r.id}) }}"><i
                                        class="fa fa-pencil"></i></a>
                            <a class="btn btn-danger" href="{{ path('deleteRestaurant',{'id':r.id}) }}"><i
                                        class="fa fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}

            <div id="div_chart"></div>

            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                {{ gc_draw(piechart, 'div_chart') }}
            </script>

            </tbody>
        </table>
    </section>
{% endblock %}
