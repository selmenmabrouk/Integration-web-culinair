{% extends 'front_end/base.html.twig' %}

{% block body %}
    <div class="page-title image-title" style="background-image:url({{ asset('img/restaurant.jpg') }});"
         xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
        <div class="container">
            <div class="page-title-wrap">
                <h2>Restaurents</h2>
                <p><a href="#" class="theme-cl">Culinair</a> | <span>Restaurant </span></p>
            </div>
        </div>
    </div>
    <section class="gray-bg">
        <div class="container">
            <!-- Row -->
            <div class="row mrg-0">
                <div class="tr-single-box short-box">
                    <div class="col-sm-3 hidden-xs align-self-center">
                        <h4>Trouver</h4>
                    </div>

                    <div class="col-sm-9 text-right">

                        <div class="btn-group mr-lg-2">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                Trouver avec
                            </button>
                            <div class="dropdown-menu pull-right animated flipInX">
                                <a href="#">Ascendant</a>
                                <a href="#">Descendant</a>
                                <a href="#"> Date</a>
                            </div>
                        </div>

                        <div class="btn-group">
                            <a href="restaurant-grid.html" class="btn btn-default tooltips">
                                <i class="ti-flix ti-layout-grid2"></i>
                            </a>
                        </div>

                        <div class="btn-group">
                            <a href="restaurant-list.html" class="btn btn-default tooltips">
                                <i class="ti-flix ti-view-list-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Row -->
            <div class="row">
                {% for r in Restaurant %}
                    <!-- Single Restaurent List -->
                    <div class="col-lg-6 col-md-6">
                        <article class="restaurent-box list-style">
                            <div class="row">
                                <div class="col-md-5 col-sm-5">
                                    <div class="restaurent-box-image">
                                        <a href="{{ path('map',{'id':r.id}) }}">
                                            <img src="{{ asset('uploads/restaurant/'~r.photo) }}" class="img-responsive
												restaurent-box-img" alt=""/>
                                            <div class="list-overlay"></div>
                                            <div class="read_more"><span>Plus</span></div>
                                        </a>
                                        <a class="list-like left"><i class="ti-heart"></i></a>
                                        <h4 class="restaurent-place">
                                            <a href="#">{{ r.emplacement }}</a>
                                        </h4>
                                        <span class="featured-tour"><i class="fa fa-star"></i></span>
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-7">
                                    <div class="inner-box">
                                        <div class="box-inner-ellipsis">
                                            <div style="margin: 0px; padding: 0px; border: 0px;">
                                                <h3 class="entry-title">
                                                    <a href="restaurant-detail.html">{{ r.nom }}</a>
                                                </h3>
                                                <div class="entry-content">
                                                    <p>{{ r.description }}</p>
                                                    <span class="price">{{ r.type }} </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="entry-meta">
                                            <div class="meta-item meta-author">
                                            </div>
                                            <div class="meta-item meta-comment fl-right">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </article>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span class="ti-arrow-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item active"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span class="ti-arrow-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </section>

{% endblock %}
